<h1>ドラマ一覧</h1>
<ul>
  <% @dramas.each do |drama| %>
    <li>  <%=drama.id %> </li>
    <li>  <%=drama.title_japanese %></li>
    <li>  <%=drama.title_english %></li>
    <% drama.episodes.each do |episode| %>
    <h3>  <%= link_to episode.episode , qas_path(episode_id: episode.id) %></h3>
    <% end %>
  <% end %>
</ul>
